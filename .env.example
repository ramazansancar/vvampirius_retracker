# Retracker Configuration
# Copy this file to .env and customize as needed

# Host port to expose the service (external access)
HOST_PORT=8080

# Listen address inside container (default: :80)
LISTEN_ADDR=:80

# Keep peers in memory for 'n' minutes (default: 180)
PEER_AGE=180

# Enable debug mode (true/false)
DEBUG_MODE=false

# Get RemoteAddr from X-Real-IP header - useful when behind reverse proxy (true/false)
X_REAL_IP=false

# Timeout in seconds for forward requests (default: 2)
FORWARD_TIMEOUT=2

# Enable Prometheus metrics endpoint /metrics (true/false)
ENABLE_PROMETHEUS=false

# Announce response interval in seconds (default: 30)
ANNOUNCE_INTERVAL=30

# Path to forwards YAML file (leave empty if not using)
# If using, uncomment the volume mount in docker-compose.yml
FORWARDS_FILE=
# Example: FORWARDS_FILE=/app/forwarders.yml
